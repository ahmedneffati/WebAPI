<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
<body style="background-image:url("http://wallpaper-gallery.net/images/football-wallpaper/football-wallpaper-9.jpg")">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Find soccer field", "", "", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Owner of soccer", "Index", "Proprietaires1", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Footballer", "Index", "Joueurs1", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Reservation", "Index", "Reservations1", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Soccer field", "Index", "Terrains1", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Match", "Index", "Matches", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Admins", "Index", "Admins1", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("time Table", "Index", "Horaires1", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Desconnexion", "Login", "Admins1", new { area = "" }, null)</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Find soccer field</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
